<h1>Add Destination</h1>
<form action="/locations" method="POST">
    <label class="input-group-text" for="inputGroupSelect01">Title</label>
    <input type="text" name="title" placeholder="Title" required>
    <br>
    <div>
        <div id='map' style='width: 400px; height: 400px;'></div>
        <script>
            mapboxgl.accessToken = 'pk.eyJ1IjoiZXhhbXBsZXMiLCJhIjoiY2p0MG01MXRqMW45cjQzb2R6b2ptc3J4MSJ9.zA2W0IkI0c6KaAhJfk9bWg';
            var map = new mapboxgl.Map({
                container: 'map',
                style: 'mapbox://styles/mapbox/streets-v11',
                center: [-77.06, 38.0],
                zoom: 13
            });

            var geocoder = new MapboxGeocoder({
                accessToken: mapboxgl.accessToken,
                mapboxgl: mapboxgl
            });

            map.addControl(geocoder, 'top-left');


            map.on('load', function () {

                // Listen for the `geocoder.input` event that is triggered when a user
                // makes a selection
                geocoder.on('result', function (ev) {

                    document.getElementById("location-name").value = ev.result.place_name;

                });
            });


        </script>
    </div>
    <input id="location-name" name="location" type="hidden" value="">
    <br>
    <div class="form-group">
        <div class="input-group-prepend">
            <label for="example-date-input" class="col-2 col-form-label">Expire Date</label>
            <input type="date" name="expireDate" value="todays-date" id="example-date-input" required>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Plan</label>
            <br>
            <textarea name="plan" placeholder="Write your plan here" rows="10" cols="30">
</textarea>
            <br>

        </div>
    </div>


    <div class="form-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Comments</label>
            <br>
            <textarea name="comments" placeholder="Users' comments" rows="10" cols="30">
</textarea>

        </div>
    </div>



    <br>
    Check off my Bucket List: <input type="checkbox" name="">
    <br>

    <button type="submit"> Add to my Bucket</button>

</form>