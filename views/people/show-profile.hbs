{{!-- profile start --}}
<div class="container container-people-profile">
    <div class="row">
        <div class="col-sm-12">
            <div class="profile-image">
                <div class="profile-image-avatar" style="background-image: url({{users.imageUrl}})"></div>
                {{!-- <img src="{{this.user.imageUrl}}" /> --}}
            </div>
            <div class="col-sm-8 profile-info">
                <h1 class="profile-user-name"> {{users.username}}</h1>
                <div class="profile-bio">
                    <p>{{users.bio}}</p>
                </div>

            </div>
        </div>

    </div>

</div>
</div>

</div>

<div class="container container-items-profile">
    <div class="row">
        <div class="col-md-6">

            {{#each experiences}}
            <div class="card mb-3 border-exp" style="max-width: 20rem;">
                <div class="card-body">
                    {{> eachExperience this}}
                    <div class="col text-center">

                        <a class="btn btn-outline-info" href="/experiences/{{this._id}}/add-comment" role="button"> <i
                                class="fa fa-comment"> </i></a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
        <div class="col-md-6">

            {{#each locations}}
            <div class="card border-dark mb-3" style="max-width: 20rem;">
                <div class="card-body">

                    {{> eachLocation this}}
                    <div class="col text-center">

                        <a class="btn btn-outline-info" href="/locations/{{this._id}}/add-comment" role="button"><i
                                class="fa fa-comment"> </i></a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
        {{!-- profile end --}}
        <!-- /.container-fluid -->

        </br>
        </br>
        <a href="/people"> Go back to all the people !</a>

    </div>
</div>