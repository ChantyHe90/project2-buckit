{{!-- profile start --}}
<div class="container container-profile">
    <div class="row">

        <div class="col-sm-12">
            <div class="profile-image">
                <div class="profile-image-avatar" style="background-image: url({{this.user.imageUrl}})"></div>
                {{!-- <img src="{{this.user.imageUrl}}" /> --}}

            </div>

            <div class="col-sm-8 profile-info">
                <h1 class="profile-user-name">{{this.user.username}}</h1>
                <a href="/profile/{{this.user._id}}/edit" class="btn profile-settings-btn" role="button"
                    aria-disabled="true"><img src="./images/settings.svg"></a>
                <div class="profile-bio">
                    <p>{{this.user.bio}}</p>
                </div>


                <div class="btn-toolbar">
                    <a class="btn btn-outline-info btn-profile" href="/experiences/add-experience" role="button">
                        <i class="fa fa-plus"></i>
                        Experience</a>
                    <a class="btn btn-outline-info btn-profile" href="/locations/add-location" role="button"><i
                            class="fa fa-plus"></i>
                        Destination</a>
                </div>


            </div>
        </div>
    </div>
</div>
{{!-- profile end --}}
<hr>
<div class="container container-items-profile">
    <div class="row">
        <div class="col-md-6">
            {{#each experiences}}
            <div class="card border-dark mb-3" style="max-width: 20rem;">
                <div class="card-body panel-clr {{#if this.done}}on{{/if}}">
                    {{> eachExperience this }}
                    <div class="col text-center">
                        <a id="TEST" class="btn btn-outline-info" href="/experiences/{{this._id}}/edit-experience"
                            role="button">edit</a>
                        <a id="TEST" class="btn btn-outline-info" href="/experiences/{{this._id}}/add-comment"
                            role="button"> <i class="fa fa-comment"> </i></a>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col-md-6">
            {{#each locations}}
            <div class="card border-dark mb-3" style="max-width: 20rem;">
                <div class="card-body">

                    {{> eachLocation this }}
                    <div class="col text-center">
                        <a id="TEST" class="btn btn-outline-info" href="/locations/{{this._id}}/edit-location"
                            role="button">edit</a>
                        <a id="TEST" class="btn btn-outline-info" href="/locations/{{this._id}}/add-comment"
                            role="button"><i class="fa fa-comment"> </i></a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>