    {{!-- Experience List --}}
    <div class="container container-feed">
        <div class="row">
            <div class="col-sm-6">
                {{#each experiences}}
                <div class="card mb-3 border-exp" style="max-width: 20rem;">

                    <div class="card-body">
                        <div class="card-header" id="color-exp">One of {{this.owner.username}}'s next experiences:
                        </div>

                        {{> eachExperience this }}
                        <div class="col text-center">
                            <a class="btn btn-outline-info" href="/experiences/{{this._id}}/add-comment"
                                role="button"><i class="fa fa-comment"> </i></a>
                        </div>

                    </div>

                </div>
                {{/each}}
            </div>
            {{!-- Location List  --}}


            <div class="col-sm-6">
                {{#each locations}}
                <div class="card border-dark mb-3" style="max-width: 20rem;">
                    <div class="card-body">


                        <div class="card-header" id="color-loc">One of {{this.owner.username}}'s next locations:</div>




                        {{> eachLocation this }}
                        <div class="col text-center">
                            <a class="btn btn-outline-info" href="/locations/{{this._id}}/add-comment" role="button"><i
                                    class="fa fa-comment"> </i></a>
                        </div>
                    </div>

                </div>
                {{/each}}
            </div>
        </div>