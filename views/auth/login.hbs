<script>
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
<div class="loginBox">
    <div class="limiter">
        <div class="container-landingpage">
            <div class="wrap-login100">
                <div class="wrap-login100-pic">
                    <img src="https://picsum.photos/500/550/" class="" />
                </div>
                <div class="login100-form">
                    <form action="/login" method="post">
                        <span class="login100-form-title p-b-26">
                            Welcome to <br>
                            <span class="styleLogo">BUCK <img src="./images/bucket.svg" /> IT</span>
                            <br>List
                        </span>
                        <p class="text-center"> Member Login</p>
                        <span class="login100-form-title p-b-48"> </span>
                        <!-- email -->
                        <div class="wrap-input100">
                            <input type="text" name="email" placeholder="email" class="input100" required />
                            <span class="focus-input100" data-placeholder="Email"></span>
                        </div>
                        <!-- password -->
                        <div class="wrap-input100">
                            <input type="password" name="password" placeholder="password" class="input100" id="myInput"
                                required />
                            <span class="focus-input100" data-placeholder="Password"></span>
                        </div>
                        <div>
                            <input type="checkbox" onclick="myFunction()" /> Show Password
                        </div>
                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>

                                <button class="login100-form-btn" type="submit" />
                                Login
                                </button>
                            </div>
                        </div>
                        {{#each messages}}
                        <p style="color: red;">{{this}}</p>
                        {{/each}}
                    </form>
                    <div class="text-center p-t-115">
                        <span class="txt1">
                            Donâ€™t have an account?
                        </span>

                        <a class="txt2" href="/signup">
                            Sign Up
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="dropDownSelect1"></div>
</div>
