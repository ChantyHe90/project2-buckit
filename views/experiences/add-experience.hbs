{{!-- start of the card --}}
<br>
<div class="row justify-content-center">
    <div class="card text-center add-card" style=" width: 25rem;">
        <form action="/experiences" method="POST" data-toggle="validator">
            {{!-- TITLE FIELD --}}
            <div class="card-body">
                <div class="form-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Title:</label>
                        <input type="text" name="title" class="form-control" placeholder="e.g. Learn how to code..."
                            required>
                        {{!-- <input type="text" class="form-control" id="inputName" placeholder="Cina Saffary" required> --}}
                    </div>
                </div>
            </div>
            {{!-- PLAN FIELD--}}
            <div class="card-body">
                <div class="form-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Plan:</label>
                        {{!--  <input type="text" name="" placeholder="Enter here"> --}}
                        <textarea class="form-control" name="plan" id="" cols="30" rows="10"
                            placeholder="What's the plan?"></textarea>
                    </div>
                </div>
            </div>

            {{!-- DEADLINE FIELD   --}}
            <div class="card-body">
                <div class="form-group">
                    <div class="input-group-prepend">
                        <label for="inputGroupSelect01" class="input-group-text" required>Deadline:</label>
                        <input class="form-control" type="date" name="expireDate" value="todays-date"
                            id="example-date-input" required>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="form-group">
                    Check off my Bucket List: <input type="checkbox" name="">
                </div>
            </div>
            <button type="submit" class="btn btn-dark mt-auto">Add to My Buckit</button>
        </form>
        <br>
    </div>
</div>